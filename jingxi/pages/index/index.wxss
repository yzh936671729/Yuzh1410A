}

.navs {
  display: flex;
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 10px;
}
.nav-item .nav-image {
  margin-top:15px;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}
